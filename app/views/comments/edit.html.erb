<h1>Edit your comment</h1>

<% @comments.each do |comment|  %>
<%= form_for comment, url: project_comment_path(@project) do |f| %>

    <div class="field">
      <p><%= f.label :reviews %></p>
      <p><%= f.text_field :reviews %></p>
    </div>

    <div class="field">
      <p><%= f.submit  %></p>
    </div>
  <% end %>
<% end %>
