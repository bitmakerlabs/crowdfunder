<%= link_to "New Project", new_project_path %>

<h2>Number of projects started so far: <%= @projects.count %> projects</h2>

<h2>Projects funded: <%= @projects_funded.count %> projects</h2>

<%
  successful_projects = []
  @pledges.each do |pledge|
    unless projects.include?(pledge.project.title)
      projects << pledge.project.title
    end
  end
%>
<h2>Successful Projects got a total of $<%= projects.count %></h2>






<% @projects.each do |project| %>
  <article class="project">
    <%= link_to project, class: 'project-link' do %>
      <figure class="project-image">
        <% if project.image %>
          <%= image_tag project.image %>
        <% else %>
          <%= image_tag ActionController::Base.helpers.asset_path("default.jpg") %>
        <% end %>
      </figure>
      <h1 class="project-title"><%= project.title %></h1>
      <time class="project-days-left">
        <%= icon('clock-o') %>
        <%= "#{time_ago_in_words(project.end_date)} #{( project.end_date > Time.now.utc ) ? 'remaining' : 'past deadline'}" %></time>
    <% end %>
  </article>
<% end %>
