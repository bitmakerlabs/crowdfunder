<div id="project_details">
<h1><%= @project.title %></h1>

<p><%= @project.description %></p>
<br>
<br>
<% if @project.image.present? %>
  <%= image_tag @project.image %>
<% end %>

<div id="goals">
<p class="goal">Goal: </p><p><%= number_to_currency(@project.goal) %></p>
<p class="goal">Amount Raised: </p><p><%= number_to_currency(@project.pledges.sum(:dollar_amount)) %> </p>
<p class="goal">Amount Left: </p><p><%= number_to_currency(@project.goal - @project.pledges.sum(:dollar_amount)) %> </p>
<p class="goal">Fundraising starts: </p><p><%= @project.start_date.strftime("%A %b %d %Y") %></p>
<p class="goal">Deadline: </p><p><%= @project.end_date.strftime("%A %b %d %Y") %></p>

<% if @project.expired? || @project.start_date > Time.now %>
  <% if @project.expired? %>
    <p class="goal" id="time_expired"><%= @project.time_left %>
  <% else %>
    <p class="goal" id="time_left">HASNT STARTED<%= @project.start_date %>
  <% end %>
<% else %>
  <p class="goal" id="time_left"><%= @project.time_left %> to fund this project
<% end %>
</p>

</div>

<h2>Rewards</h2>
<% @project.rewards.each do |reward| %>
<div id="reward">
  <p><%= number_to_currency(reward.dollar_amount) %></p>
  <p><%= reward.description %></p>

  <%= form_for [reward, reward.pledges.new] do |f| %>
    <%= f.number_field :dollar_amount, value: reward.dollar_amount, step: 0.01 %>
    <% if Time.now > @project.start_date && Time.now < @project.end_date %>
      <%= f.submit "Pledge" %>
    <% end %>
  <% end %>
</div>
<% end %>

</div>
