<h1><%= @category.name %></h1>

<% @category.projects.each do |project| %>
<div class="project-info">
  <h4><%=link_to project.title, project_path(project) %></h4>
  <h5>Total goal: <%= number_to_currency(project.goal) %> from <%= project.start_date.strftime("%F") %> to <%= project.end_date.strftime("%F") %></h5>
  <p><%= project.description %></p>
</div>
<% end %>
