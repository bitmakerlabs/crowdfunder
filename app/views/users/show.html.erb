<div>
	<h1><%= @user.first_name%></h1>
	<div>
		<h2>Backed</h2>
		<% @pledges.each do |pledge|%>
			<h3><%= pledge.project.title%></h3>
			<p><%= pledge.project.description%></p>
			<% if @user.id == current_user.id%>
				<p>You pledged: $<%= pledge.dollar_amount%></p>
			<% else %>
				<p>They pledged: $<%= pledge.dollar_amount%></p>
			<% end %>
		<% end %>
	</div>
	<div>
		<h2>Owned</h2>
		<%@projects.each do |project|%>
			<h3><%=link_to project.title, project_path(project.id)%></h3>
			<p><%= project.description %></p>
		<% end %>
	</div>
	<div>
		<h2>Total Pledged: $<%= @total_pledged %></h2>
	</div>
</div>