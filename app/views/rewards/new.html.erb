<h3>Add a reward for <%= @project.title %></h3>

<% if @reward.errors.any? %>
<div class="errors">
  <h4>Reward not created because:</h4>
    <% @reward.errors.full_messages.each do |msg| %>
    <h5><%= msg %></h5>
    <% end %>
</div>
<% end %>

<div class="form">
  <%= form_for [@project, @reward] do |f| %>
    <div>
      <%= f.label :dollar_amount %>
      <%= f.number_field :dollar_amount, step: 0.01 %>
    </div>
    <br> <br>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <br><br>
    <div>
      <%= f.label :max_claims, "Maximum Available" %>
      <%= f.number_field :max_claims %>
      <span>optional: If blank, no limit on claims is set</span>
    </div>
    <br><br>
    <%= f.submit %>
  <% end %>
</div>
